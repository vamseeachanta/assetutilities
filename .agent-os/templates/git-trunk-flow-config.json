{
  "hooks": {
    "organize-structure": {
      "command": "/organize-structure",
      "description": "Organize project structure and remove clutter",
      "enabled": true,
      "order": 1,
      "conditions": {
        "run_if": "always",
        "skip_if_clean": false
      }
    },
    "modernize-deps": {
      "command": "/modernize-deps",
      "description": "Update and modernize dependencies",
      "enabled": true,
      "order": 2,
      "conditions": {
        "run_if": "has_package_files",
        "files_to_check": ["package.json", "pyproject.toml", "requirements.txt"]
      }
    },
    "remove-duplicates": {
      "command": "builtin",
      "description": "Find and remove duplicate code blocks",
      "enabled": true,
      "order": 3,
      "config": {
        "min_lines": 10,
        "similarity_threshold": 0.9,
        "ignore_patterns": ["test_*", "*_test.py"]
      }
    },
    "fix-imports": {
      "command": "builtin",
      "description": "Fix and organize imports",
      "enabled": true,
      "order": 4,
      "config": {
        "style": "isort",
        "group_order": ["stdlib", "third_party", "local"]
      }
    },
    "add-docstrings": {
      "command": "builtin",
      "description": "Add missing docstrings to functions and classes",
      "enabled": true,
      "order": 5,
      "config": {
        "style": "google",
        "include_private": false,
        "min_lines": 5
      }
    },
    "security-fixes": {
      "command": "builtin",
      "description": "Apply security best practices",
      "enabled": true,
      "order": 6,
      "config": {
        "check_secrets": true,
        "add_csp_headers": true,
        "secure_cookies": true
      }
    },
    "performance-optimize": {
      "command": "builtin",
      "description": "Optimize performance bottlenecks",
      "enabled": true,
      "order": 7,
      "config": {
        "optimize_loops": true,
        "use_generators": true,
        "cache_expensive_calls": true
      }
    },
    "test-coverage": {
      "command": "builtin",
      "description": "Add tests for uncovered code",
      "enabled": false,
      "order": 8,
      "config": {
        "min_coverage": 80,
        "generate_stubs": true
      }
    },
    "format-code": {
      "command": "/format-code",
      "description": "Format code with black/prettier",
      "enabled": false,
      "order": 9
    },
    "lint-fix": {
      "command": "/lint-fix",
      "description": "Fix linting issues automatically",
      "enabled": false,
      "order": 10
    }
  },
  "auto_improvements": true,
  "interactive_mode": true,
  "commit_improvements": true,
  "improvement_summary": {
    "show_in_commit": true,
    "show_in_pr": true,
    "generate_report": true
  },
  "custom_hooks": {
    "pre_improvements": [],
    "post_improvements": [],
    "pre_commit": [],
    "post_commit": []
  },
  "slash_command_integration": {
    "auto_discover": true,
    "commands_directory": ".agent-os/commands",
    "external_commands": []
  }
}